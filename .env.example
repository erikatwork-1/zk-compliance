# WARNING: Never commit your private keys or secrets to version control!
# Copy this file to .env and fill in your values

# Ethereum Network Configuration
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
# Or use Alchemy: https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Private Key for Deploying Contracts
# WARNING: Use a test account with no real funds for development
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key

# Contract Addresses (filled after deployment)
VERIFIER_ADDRESS=
AGE_VERIFICATION_ADDRESS=

# Issuer Keys (for testing - in production these should be securely managed)
ISSUER_A_PRIVATE_KEY=
ISSUER_B_PRIVATE_KEY=

# User Keys (for testing)
USER_PRIVATE_KEY=

# Ganache Local Network Configuration (Optional - Alternative to anvil)
# Default Ganache runs on http://127.0.0.1:8545 with chain ID 1337
GANACHE_RPC_URL=http://127.0.0.1:8545
GANACHE_CHAIN_ID=1337
# Ganache private key (first account by default)
# Example: 0x4f3edf983ac636a65a842ce7c78d9aa706d3b113bce9c46f30d7d21715b23b1d
GANACHE_PRIVATE_KEY=

# Foundry Configuration (Optional)
# Set to 1 to disable nightly build warning
FOUNDRY_DISABLE_NIGHTLY_WARNING=1
